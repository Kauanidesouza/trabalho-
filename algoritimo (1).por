/**Faça um algoritimo que ao usúario para digitar um número e digase ele é par ou ímpar. */
programa {
  funcao inicio() {
   inteiro numero
   //*progama de par ou ímpar */
   escreva("digite um numero inteiro:") 
   leia(numero)
   se(numero%2==0){
    escreva("este número é par")
   }
   senao{
    escreva("este número é ímpar")
   }
    
  }
}
